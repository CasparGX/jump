<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="score:"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="0"/>

    </LinearLayout>

    <com.casparx.game.jump.gameview.JumperView
        android:id="@+id/jumper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/waiter"
        android:layout_gravity="center_horizontal" />

    <com.casparx.game.jump.gameview.RailView
        android:id="@+id/line_start"
        android:layout_marginTop="250px"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"></com.casparx.game.jump.gameview.RailView>

    <com.casparx.game.jump.gameview.RailView
        android:id="@+id/line_next"
        android:layout_marginTop="250px"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f00"></com.casparx.game.jump.gameview.RailView>

    <TextView
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
